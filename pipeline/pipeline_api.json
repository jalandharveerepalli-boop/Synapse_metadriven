						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "api_source",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "products_Json",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Json_to_csv",
				"type": "ExecuteDataFlow",
