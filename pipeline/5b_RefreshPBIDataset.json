						},
						{
							"name": "Wait 1 Minute",
							"type": "Wait",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"waitTimeInSeconds": 60
							}
						},
						{
							"name": "Store the Response",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Ask the API If the Refresh is Running",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "APIResponse",
								"value": {
									"value": "@string(activity('Ask the API If the Refresh is Running').output.value)",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Refresh the Token",
							"type": "WebActivity",
							"dependsOn": [
								{
									"activity": "Wait 1 Minute",
									"dependencyConditions": [
