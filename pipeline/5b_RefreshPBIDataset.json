					"connectVia": {
						"referenceName": "AutoResolveIntegrationRuntime",
						"type": "IntegrationRuntimeReference"
					},
					"method": "GET",
					"body": {
						"simple": "body"
					},
					"authentication": {
						"type": "MSI",
						"resource": "https://vault.azure.net"
					}
				}
			},
			{
				"name": "Wait Until the Refresh Finishes",
				"type": "Until",
				"dependsOn": [
					{
						"activity": "Call the Dataset Refresh",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greaterOrEquals(indexOf(variables('APIResponse'), 'Completed'), 0)",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Ask the API If the Refresh is Running",
							"type": "WebActivity",
							"dependsOn": [
								{
									"activity": "Refresh the Token",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"url": {
									"value": "@concat('https://api.powerbi.com/v1.0/myorg/groups/'\n,pipeline().parameters.PBIAppWorkspaceId\n,'/datasets/'\n,pipeline().parameters.PBIDatasetId\n,'/refreshes?$top=1')",
